   bottom: "img_fusion_bnorm"
   top: "img_fusion_bnorm"
   name: "scale_img_fusion_bnorm"
   type: "Scale"
   param {
     lr_mult: 0.001
     decay_mult: 1
   }
   param {
     lr_mult: 0.002
     decay_mult: 0
   }
   scale_param {
     bias_term: true
   }
}

